<body id="page-top">


    <header>



      <div class="header-content show-header" style="top: 20%">
        <div class="header-content-inner">
          <h1 id="homeHeading">California</h1>
          <hr>
          <h3><b>District 55</b></h3>
          <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
          <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>

        </div>
    </header>

    <%= render "voter_power_index", data: @data %>

    <%= render "tipping_chance", data: @data %>


    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading" style="font-size: 60px;">Tendencies</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 text-center">
                    <div class="service-box">


                        <h1>How Your State Tends to Vote For President</h1>


                        <%=image_tag get_white_house_image(@data.get_president_trends)%>


                        <h2 class="text-muted"><%= @data.get_president_trends %></h2>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 text-center">
                    <div class="service-box">
                        <h1>Likely Senate Race Outcome</h1>
                        <%=image_tag get_senate_image(@data.get_senator_trends) %>

                        <h2 class="text-muted"><%= @data.get_senator_trends %></h2>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <% unless params[:state] == "dc" %>

     <section id="services" class="bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading" style="font-size: 60px;">Your Senators</h2>
                    <hr class="hr-secondary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
               <%= render "senator_info", n: 0 %>
               <%= render "senator_info", n: 1 %>


            </div>
        </div>
    </section>

    <% end %>

    <section class="bg-secondary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                  <hr class="light">

                  <br>

                    <h1 class="section-heading" style="font-size: 90px;">Now take this information to straight to the polls!</h1>

                    <br><br>

                    <%= button_to "Register to Vote!", "https://www.vote.org", class: "btn btn-primary btn-lg" %>

                    <br>
                    <hr class="light">

                </div>
            </div>
        </div>
    </section>








    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/creative.min.js"></script>

</body>
