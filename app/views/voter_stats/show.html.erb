<body id="page-top">




    <section class="bg-primary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                  <hr class="light">
                    <h1 class="section-heading" style="font-size: 90px;">Your vote is worth  <b class="text-secondary"><%= @data.get_voter_power_index %></b> times as much as a typical vote in the U.S.</h1>
                    <hr class="light">

                </div>
            </div>
        </div>
    </section>

     <section class="bg-secondary" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                  <hr class="light">
                    <h1 class="section-heading" style="font-size: 90px;">Your state has a <b class="text-primary"><%= @data.get_tipping_point_chance %></b> chance of tipping the election.</h1>
                    <hr class="light">

                </div>
            </div>
        </div>
    </section>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="section-heading">Tendencies</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 text-center">
                    <div class="service-box">


                        <h1>How Your State Tends to Vote For President</h1>
                        <%=image_tag  get_white_house_image(@data.get_president_trends)%>


                        <h2 class="text-muted"><%= @data.get_president_trends %></h2>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 text-center">
                    <div class="service-box">
                        <h1>Likely Senate Race Outcome</h1>
                        <%=image_tag get_senate_image(@data.get_senator_trends) %>
                        <!-- <i class="fa fa-4x fa-paper-plane text-secondary sr-icons"></i> -->

                        <h2 class="text-muted"><%= @data.get_senator_trends %></h2>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>Free Download at Start Bootstrap!</h2>
                <a href="http://startbootstrap.com/template-overviews/creative/" class="btn btn-default btn-xl sr-button">Download Now!</a>
            </div>
        </div>
    </aside>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Let's Get In Touch!</h2>
                    <hr class="primary">
                    <p>Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
                </div>
                <div class="col-lg-4 col-lg-offset-2 text-center">

                    <i class="fa fa-phone fa-3x sr-contact"></i>
                    <p>123-456-6789</p>
                </div>


                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-3x sr-contact"></i>
                    <p><a href="mailto:your-email@your-domain.com">feedback@startbootstrap.com</a></p>
                </div>
            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/creative.min.js"></script>

</body>
